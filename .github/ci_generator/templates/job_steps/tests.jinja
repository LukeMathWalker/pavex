<% extends 'steps' %>
<% block inner_steps %>
- name: Install Rust stable toolchain
  uses: actions-rust-lang/setup-rust-toolchain@v1.8.0
  with:
    components: rustfmt
    rustflags: ""
<% include 'setup_pavex' %>
- name: Run tests
  run: |
    cargo test --all-features --workspace --exclude="pavex_cli" --exclude="pavex_macros" --exclude="pavex" << exclude_libs_with_deps >>
<%- endblock %>
