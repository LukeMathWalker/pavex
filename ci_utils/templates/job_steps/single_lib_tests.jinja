<% extends 'steps' %>
<% block inner_steps %>
- name: Install Rust stable toolchain
  uses: actions-rust-lang/setup-rust-toolchain@v1.8.0
  with:
    components: rustfmt
    rustflags: ""
    cache-workspaces: "./libs -> ./target"
<% include 'setup_pavex' %>
- name: Run tests
  working-directory: libs
  run: |
    cargo test --all-features --package << lib.name >>
<%- endblock %>
