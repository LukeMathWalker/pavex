{%- if greet_route -%}
pub mod greet;
{%- endif -%}
pub mod ping;

use pavex::blueprint::{router::GET, Blueprint};
use pavex::f;

pub fn register(bp: &mut Blueprint) {
    bp.route(GET, "/api/ping", f!(self::ping::get));
    {%- if greet_route -%}
    bp.route(GET, "/api/greet/{name}", f!(self::greet::get));
    {%- endif -%}
}
